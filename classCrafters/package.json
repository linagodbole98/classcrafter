{
  "name": "classcrafters",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start:dev": "dotenv -e .env.development vite",
    "start:qa": "dotenv -e .env.qa vite",
    "start:prod": "dotenv -e .env.production vite",
    "build:dev": "tsc && vite build --mode development",
    "build:qa": "tsc && vite build --mode qa",
    "build:prod": "tsc && vite build --mode production",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "lint:fix": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "prettier": "prettier --write   \"./**/*.{css,js,json,scss,ts,tsx,jsx,md}\" --config ./.prettierrc",
    "format": "yarn prettier && yarn lint:fix --max-warnings 0",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/babel__core": "^7.20.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.16.0",
    "sass": "^1.69.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.51.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm format",
      "npm lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm format"
    }
  }
}
